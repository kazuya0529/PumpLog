<div class="custom-week-calendar">
  <div class="week-nav">
    <%= link_to "Previous", calendar.url_for_previous_view, class: "nav-link" %>
    <span class="week-number">Week <%= calendar.week_number %></span>
    <%= link_to "Next", calendar.url_for_next_view, class: "nav-link" %>
  </div>

  <div class="calendar-grid">
    <% date_range.each do |date| %>
  <div class="day-box">
    <div class="day-label"><%= date.strftime("%a") %></div>
    <% @workout_menus.each do |workout_menu| %>
      <% if workout_menu.date == date %>
        <div class="workout-entry">
          <p><%= workout_menu.menu.name %></p>
          <p><%= workout_menu.rep.name %></p>
          <p><%= workout_menu.training_set.name %></p>
          <p><%= workout_menu.dumbbell_weight.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
  </div>
</div>